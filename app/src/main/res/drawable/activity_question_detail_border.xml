<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the main color -->
    <item>
        <shape>
            <!--    边框颜色 -->
            <solid android:color="#ffffff" />
        </shape>
    </item>
    <!-- 给View的上设置2dp的边框 -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="2dp">
        <shape>
            <!--     View填充颜色 -->
            <solid android:color="#f0f0f0" />
        </shape>
    </item>

</layer-list>