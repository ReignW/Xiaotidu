<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.njuse.xiaotidu.xiaotidu.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="226dp">

        <Button
            android:id="@+id/favourite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/favarite"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/review"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/share"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@mipmap/share"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/favourite"/>

        <Button
            android:id="@+id/review"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/review"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/thumb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/thumb"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/review"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/warning"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"

            android:background="@mipmap/warning"
            android:layout_toRightOf="@+id/thumb"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"/>



        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="35dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TextView"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="199dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="题目："
            android:textSize="15sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="174dp"
            android:text="答案："
            android:textSize="15sp"
            tools:layout_editor_absoluteX="0dp"

            tools:layout_editor_absoluteY="227dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
